@{
    ViewData["Title"] = "Application Submitted";
    Layout = null; // Use this if you don't want to include the default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="success-container">
        <div class="success-card">
            <div class="icon">✓</div>
            <h1>@ViewData["Title"]</h1>
            <p>Your application was successfully completed. We’ll contact you soon!</p>
            <a asp-controller="ApplicationForm" asp-action="PersonalInfo" class="btn">Return to Home</a>
        </div>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(120deg, #89f7fe, #66a6ff);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .success-container {
            padding: 2rem;
        }

        .success-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 3rem 2.5rem;
            max-width: 450px;
            width: 100%;
            text-align: center;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .icon {
            font-size: 4rem;
            color: #4BB543;
            margin-bottom: 1.5rem;
            text-shadow: 0 0 15px rgba(75, 181, 67, 0.6);
            animation: glow 2s infinite alternate;
        }

        h1 {
            font-size: 2rem;
            color: #fff;
            margin-bottom: 0.5rem;
        }

        p {
            font-size: 1rem;
            color: #f1f1f1;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .btn {
            background: #4BB543;
            color: white;
            padding: 0.8rem 1.6rem;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(75, 181, 67, 0.3);
        }

            .btn:hover {
                background: #3aa43a;
                box-shadow: 0 6px 16px rgba(75, 181, 67, 0.45);
            }

        @@keyframes glow {
            from{
            text-shadow: 0 0 10px rgba(75, 181, 67, 0.5);
        }

        to {
            text-shadow: 0 0 20px rgba(75, 181, 67, 1);
        }

        }

        @@media (max-width: 500px) {
            .success-card

        {
            padding: 2rem 1.5rem;
        }

        h1 {
            font-size: 1.6rem;
        }

        p {
            font-size: 0.95rem;
        }

        }
    </style>
</body>
</html>
